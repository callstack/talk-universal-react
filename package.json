{
  "name": "talk-universal-react",
  "version": "1.0.1",
  "description": "ReactJS Powered Presentation Framework",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.production.js",
    "lint": "eslint --ext .js,.jsx .",
    "deploy": "npm run clean & npm run build && surge -p .",
    "start": "cross-env NODE_ENV=development node server.js",
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --trailing-comma all --write \"{,!(node_modules)/}**/!(server).js\""
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "normalize.css": "3.0.3",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "spectacle": "^2.0.0",
    "spectacle-code-slide": "^0.4.0",
    "spectacle-terminal": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.18.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-react-transform": "^2.0.0-beta1",
    "babel-plugin-transform-decorators-legacy": "^1.2.0",
    "babel-plugin-transform-react-constant-elements": "^6.4.0",
    "babel-plugin-transform-react-inline-elements": "^6.4.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-runtime": "^6.18.0",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.0",
    "eslint": "^3.19.0",
    "eslint-config-formidable": "^2.0.1",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^7.0.1",
    "express": "^4.13.3",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.0",
    "husky": "^0.13.4",
    "is-buffer": "^1.1.1",
    "lint-staged": "^3.6.1",
    "markdown-loader": "^0.1.7",
    "node-libs-browser": "^0.5.3",
    "prettier": "^1.4.4",
    "raw-loader": "^0.5.1",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.2.0",
    "rimraf": "^2.4.4",
    "style-loader": "^0.13.0",
    "surge": "latest",
    "url-loader": "^0.5.6",
    "webpack": "2.2.0",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "prettier",
      "prettier/flowtype",
      "prettier/react"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "strict": 0,
      "arrow-body-style": 0,
      "arrow-parens": 0,
      "class-methods-use-this": 0,
      "default-case": 0,
      "generator-star-spacing": 0,
      "global-require": 0,
      "guard-for-in": 0,
      "new-cap": 0,
      "no-alert": 0,
      "no-confusing-arrow": 0,
      "no-constant-condition": 0,
      "no-console": "error",
      "no-duplicate-imports": 0,
      "no-plusplus": 0,
      "no-restricted-syntax": 0,
      "no-underscore-dangle": 0,
      "no-use-before-define": 0,
      "no-undef": 0,
      "no-trailing-spaces": [
        "error"
      ],
      "import/extensions": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-duplicates": 0,
      "import/no-unresolved": 0,
      "import/no-dynamic-require": 0,
      "import/no-webpack-loader-syntax": 0,
      "import/prefer-default-export": 0,
      "react/jsx-no-bind": 0,
      "react/jsx-filename-extension": 0,
      "react/forbid-prop-types": 0,
      "react/prefer-stateless-function": 0,
      "react/require-default-props": 0,
      "react/sort-comp": 0,
      "react/no-unused-prop-types": 0,
      "react/prop-types": 0,
      "react/no-array-index-key": 0
    }
  }
}
